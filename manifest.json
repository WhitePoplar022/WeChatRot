{
	"manifest_version": 2,
	"name": "微信机器人",
	"version": "0.1",
	"description": "向多个微信群同时发送图文直播",
	"background": { "scripts": [ "background.js" ] },
	"permissions": [
		"tabs",
		"activeTab",
		"https://*.weixin.qq.com/"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.weixin.qq.com/*",
				"https://wx.qq.com/*"
			],
			"css": [ "robot.css" ],
			"js": [ "inject.js", "content_script.js" ]
		}
	]
}
